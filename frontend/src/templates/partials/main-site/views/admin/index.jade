mixin page_header
  .page-header(ng-if='curUser.is_admin')
    .page-header-row
      .page-header-row-cell.x3
        i.icon-settings
      .page-header-row-cell
        .x12
          strong
            | Administration
    ul.page-header-nav
      li.spacer
      li(ui-sref-active='active')
        a.link(ui-sref='.users')
          | Users
      li(ui-sref-active='active')
        a.link(ui-sref='.auth')
          | Authentication
      li.padding

mixin forbidden_message
  .big-message
    h3.text-center
      i.icon-directions.x6
    p.text-center.x2
      | It looks like you're lost
    .row
      .col-sm-6
        h4
          button.btn.btn-lg.btn-block.btn-success(ui-sref='labs')
            | Yes, take me somewhere safe
      .col-sm-6
        h4
          button.btn.btn-lg.btn-block.btn-default(ui-sref='labs')
            | No, I should be here

mixin non_admin_message
  .page-header(ng-if='!curUser.is_admin')
    .page-header-row
      .page-header-row-cell.x3
        i.icon-close
      .page-header-row-cell
        .x12
          strong
            | Oh no
    ul.page-header-nav
      li.padding
  .page-layout(ng-if='!curUser.is_admin')
    .page-layout-content-no-nav
      +forbidden_message

mixin content
  +non_admin_message
  +page_header
  ui-view(ng-if='curUser.is_admin')

+content
