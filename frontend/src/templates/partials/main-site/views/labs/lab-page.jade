mixin page_header
  .page-top-nav
    .page-top-nav-links
      ul
        li(ng-repeat='(type_obj_id, type_obj) in dbObjects.byParentId[allLabs.byId[lab_id].type_id] | orderBy:"type_obj.display_name.plural"' ui-sref-active='active')
          a.link(ui-sref='.browse-type({typeSlug: type_obj.slug})')
            object-type-title(type-id='type_obj.id')
        li.padding
        li(ng-if='curUser.is_admin' ui-sref-active='active')
          a.link(ui-sref='.manage')
            i.icon-settings

mixin lab_empty
  .big-message
    h3.text-center
      i.icon-clock.x6(ng-if='!curUser.is_admin')
      i.icon-ghost.x6(ng-if='curUser.is_admin')
    p.text-center.x2
      | This lab is still empty
    p.text-center.x12(ng-if='!curUser.is_admin')
      | Please wait you administrator is adding new hardware
    p.text-center.x12(ng-if='curUser.is_admin')
      | You need to start by configuring which hardware goes in this lab
    p.text-center.x2(ng-if='curUser.is_admin')
      button.btn.btn-lg.btn-success(ui-sref='.manage')
        | Configure This Lab

mixin content
  ui-view
    .page-layout(ng-if='dbObjects.byParentId[allLabs.byId[lab_id].type_id] | isEmpty')
      .page-layout-content-no-nav
        +lab_empty

+page_header
+content
