mixin content
  .panel.panel-default
    .panel-body

mixin loading
  .text-center(style={'opacity': '0.5'})
    i.fa.fa-3x.fa-spin.fa-circle-o-notch

mixin no_labs
  .row
    .col-sm-12.col-md-offset-1.col-md-10.col-lg-offset-2.col-lg-8
      .panel.panel-default
        .panel-body
          include no-labs

mixin current_lab_menu
  ul.nav.nav-pills.nav-stacked
    li.heading
      | Hardware
    li(role='presentation' ng-repeat='(type_id, type_lab_config) in curLab.raw.types' ng-class="{active: type_id == cur_type_id}")
      a.link(ng-click='select_hardware_type(type_id)')
        | {{ type_lab_config.name_plural | titlecase }}

mixin current_lab_contents
  span

mixin current_lab
  .row(ng-if='curLab.raw.types | isEmpty')
    .col-sm-12.col-md-offset-1.col-md-10.col-lg-offset-2.col-lg-8
      .panel.panel-default
        .panel-body
          h3.text-center
            i.icon-clock.x6
          p.text-center.x2
            | This lab is still empty
          p.text-center.x12
            | Please wait you administrator is adding new hardware
  .row(ng-if='curLab.raw.types | isNotEmpty')
    .col-sm-3
      +current_lab_menu
    .col-sm-9
      .panel.panel-default
        .panel-body
          +current_lab_contents

mixin main
  .container(ng-if='!allLabs.ready')
    +loading
  .container(ng-if='allLabs.ready && (allLabs.all.length == 0)')
    +no_labs
  .container(ng-if='curLab.lab_id')
    +current_lab

+main
